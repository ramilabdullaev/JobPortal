@model JobPortal.Data.ViewModel.JobVM

@{
    ViewData["Title"] = "Update";
}

<h1>Update job</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" value="@Model.Name"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" value="@Model.Description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label">Category</label>
                <span asp-validation-for="Category" class="text-danger"></span>
                <select asp-for="Category" class="form-control">
                    <option value="">Please select</option>
                    @foreach (var category in Html.GetEnumSelectList<Category>())
                    {
                        <option value="@category.Value">@category.Text</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Industry" class="control-label">Industry</label>
                <span asp-validation-for="Industry" class="text-danger"></span>
                <select asp-for="Industry" class="form-control">
                    <option value="">Please select</option>
                    @foreach (var industry in Html.GetEnumSelectList<Industry>())
                    {
                        <option value="@industry.Value">@industry.Text</option>
                    }
                </select>
            </div>            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

